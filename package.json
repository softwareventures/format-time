{
  "name": "@softwareventures/format-time",
  "version": "0.0.0-development",
  "description": "Convert @softwareventures/time to a string in a variety of formats",
  "keywords": [
    "TypeScript",
    "time",
    "format",
    "string",
    "text"
  ],
  "author": "Daniel Cassidy <mail@danielcassidy.me.uk>",
  "homepage": "https://github.com/softwareventures/format-time",
  "bugs": "https://github.com/softwareventures/format-time/issues",
  "repository": "github:softwareventures/format-time",
  "license": "ISC",
  "scripts": {
    "commit": "cz",
    "fix": "tsc --noEmit && eslint . --fix && prettier --write .",
    "postinstall": "husky install",
    "lint": "tsc --noEmit && eslint . && prettier --check .",
    "prepack": "tsc && pinst --disable",
    "postpack": "pinst --enable",
    "test": "ava"
  },
  "sideEffects": false,
  "engines": {
    "node": "^18 || >=20"
  },
  "dependencies": {
    "@softwareventures/array": "^7.0.0",
    "@softwareventures/time": "^2.0.0",
    "tslib": "^2.5.0"
  },
  "devDependencies": {
    "@commitlint/cli": "17.4.4",
    "@commitlint/config-conventional": "17.4.4",
    "@commitlint/cz-commitlint": "17.4.4",
    "@softwareventures/eslint-config": "7.1.0",
    "@softwareventures/precise-commits": "3.0.9",
    "@softwareventures/prettier-config": "4.0.0",
    "@softwareventures/semantic-release-config": "3.1.0",
    "@softwareventures/tsconfig": "7.0.0",
    "@types/node": "17.0.45",
    "@typescript-eslint/eslint-plugin": "5.54.1",
    "@typescript-eslint/parser": "5.54.1",
    "ava": "5.2.0",
    "commitizen": "4.3.0",
    "eslint": "8.36.0",
    "eslint-config-prettier": "8.7.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-jsdoc": "40.0.1",
    "eslint-plugin-prefer-arrow": "1.2.3",
    "eslint-plugin-sonarjs": "0.18.0",
    "husky": "8.0.3",
    "inquirer": "8.2.5",
    "pinst": "3.0.0",
    "prettier": "2.8.4",
    "semantic-release": "19.0.5",
    "ts-node": "10.9.1",
    "typescript": "4.9.5"
  },
  "eslintConfig": {
    "root": true,
    "extends": "@softwareventures"
  },
  "prettier": "@softwareventures/prettier-config",
  "config": {
    "commitizen": {
      "path": "./node_modules/@commitlint/cz-commitlint"
    }
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register/files"
    ]
  },
  "release": {
    "extends": "@softwareventures/semantic-release-config"
  },
  "packageManager": "yarn@4.0.2",
  "publishConfig": {
    "access": "public"
  }
}
